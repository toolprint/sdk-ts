{
  "name": "onegrep-sdk",
  "private": true,
  "scripts": {
    "generate": "turbo run generate",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "inspect": "turbo run dev inspector:sse",
    "gateway": "turbo run start --filter=@repo/onegrep-gateway",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "check-types": "turbo run check-types",
    "check:prettier:staged": "pretty-quick --staged",
    "check:commit:msg:staged": "commitlint --edit \"$1\"",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "dotenv-cli": "^8.0.0",
    "dotenv-mono": "^1.3.14",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.5.0",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
