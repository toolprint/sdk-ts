{
  "name": "@repo/onegrep-typescript-sdk",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "turbo run lint",
    "lint:staged": "turbo run lint",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "check:prettier:staged": "pretty-quick --staged",
    "check:commit:msg:staged": "commitlint --edit \"$1\"",
    "prepare": "husky",
    "publish": "turbo run publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "check-licenses": "^1.1.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-mono": "^1.3.14",
    "husky": "^9.1.5",
    "lint-staged": "^16.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20 <=22"
  }
}
