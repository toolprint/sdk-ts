{
  "name": "@repo/utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "OneGrep, Inc.",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "outputs": [
    "dist/**/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "rollup -c",
    "test": "LOG_MODE=file LOG_LEVEL=debug vitest run --config vitest.config.ts --printConsoleTrace=true --silent=false ",
    "test:watch": "LOG_MODE=file LOG_LEVEL=debug vitest watch --config vitest.config.ts --printConsoleTrace=true --silent=false",
    "clean:dist": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.0.7",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "latest"
  },
  "dependencies": {
    "dotenv": "^17.0.0",
    "loglevel": "^1.9.2",
    "ts-log": "^2.2.7",
    "zod": "^3.25.67"
  },
  "peerDependencies": {
    "chalk": "^5.3.0"
  }
}
