{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "ONEGREP_*"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "openapi:trim": {
      "dependsOn": [],
      "outputs": ["openapi/*"]
    },
    "generate": {
      "dependsOn": ["openapi:trim"],
      "outputs": ["src/**/*.ts"]
    },
    "compile": {
      "dependsOn": ["^compile"]
    },
    "build:types": {
      "dependsOn": ["compile", "^build:types"],
      "outputs": ["dist/types/**"]
    },
    "build:cjs": {
      "dependsOn": ["@repo/utils#compile", "^build:cjs"],
      "outputs": ["dist/cjs/**"]
    },
    "build:esm": {
      "dependsOn": ["@repo/utils#compile", "^build:esm"],
      "outputs": ["dist/esm/**"]
    },
    "build": {
      "dependsOn": ["build:types", "build:cjs", "build:esm"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false
    },
    "@onegrep/gateway#build": {
      "dependsOn": ["^build:types"]
    },
    "@onegrep/langchain#build": {
      "dependsOn": ["^build:types"]
    },
    "@onegrep/n8n-nodes-onegrep#build": {
      "dependsOn": ["^build:types", "^build:cjs", "prepack"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false
    },
    "@onegrep/n8n-nodes-onegrep#prepack": {
      "dependsOn": ["build:cjs"],
      "outputs": ["dist/**/*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["build", "^check-types"]
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL", "LOG_MODE", "LOG_LEVEL"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.*local",
        "**/*.tsx",
        "**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "outputs": []
    },
    "test:watch": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL", "LOG_MODE", "LOG_LEVEL"],
      "cache": false,
      "persistent": true
    },
    "package": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": ["pack/**/*"]
    },
    "package:sea": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": ["bin/**/*"]
    },
    "licenses": {
      "dependsOn": ["package"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean", "clean:dist", "clean:modules", "clean:pack"]
    },
    "clean:dist": {
      "cache": false,
      "dependsOn": ["^clean:dist"]
    },
    "clean:dist:types": {
      "cache": false,
      "dependsOn": ["^clean:dist:types"]
    },
    "clean:dist:cjs": {
      "cache": false,
      "dependsOn": ["^clean:dist:cjs"]
    },
    "clean:dist:esm": {
      "cache": false,
      "dependsOn": ["^clean:dist:esm"]
    },
    "clean:modules": {
      "cache": false,
      "dependsOn": ["^clean:modules"]
    },
    "clean:pack": {
      "cache": false,
      "dependsOn": ["^clean:pack"]
    },
    "dev": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:stdio": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "cache": false,
      "persistent": true
    },
    "inspector:sse": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "env": ["ONEGREP_API_KEY", "ONEGREP_API_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*local"],
      "dependsOn": ["build"],
      "persistent": true
    }
  }
}
